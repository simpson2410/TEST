@using Model.Permissions
@model UserRegisterModel
@{
    ViewData["Title"] = "EditUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-wrapper">
    <div class="content container-fluid">

        <!-- Page Header -->
        <div class="page-header">
            <div class="row">
                <div class="col">
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
                        <li class="breadcrumb-item"><a href="/banners/getall">Danh sách quản trị</a></li>
                        <li class="breadcrumb-item active">Nhập thông tin</li>
                    </ul>
                </div>
            </div>
        </div>
        <!-- /Page Header -->

        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Nhập thông tin</h4>
                    </div>
                    <div class="card-body">
                        <form action="/accounts/EditUser" method="post" enctype="multipart/form-data" name="mainform">
                            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                            <input class="form-control" hidden type="text" asp-for="Id" />
                            <div class="form-group row">
                                <div class="col-12 col-sm-6">
                                    <div class="form-group">
                                        <label>Mã y tế</label>
                                        <input class="form-control" type="text" asp-for="HISCode" disabled />
                                    </div>
                                </div>
                                <div class="col-12 col-sm-6">
                                    <div class="form-group">
                                        <label>Tên tài khoản</label>
                                        <input class="form-control" type="text" asp-for="UserName" disabled />
                                    </div>
                                </div>
                                <div class="col-12 col-sm-6">
                                    <div class="form-group">
                                        <label>Họ tên</label>
                                        <input class="form-control" type="text" asp-for="FullName" required />
                                    </div>
                                </div>
                                <div class="col-12 col-sm-6">
                                    <div class="form-group">
                                        <label>Ngày sinh</label>
                                        <div class="cal-icon">
                                            <input type="text" class="form-control datetimepickerBirthDay" asp-for="Birthday" name="BirthDay" required>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12 col-sm-6">
                                    <div class="form-group">
                                        <label class="col-form-label">Giới tính</label>
                                        <div>
                                            <div class="form-check form-check-inline">
                                                <input class="form-check-input" type="radio" name="Sex" id="gender_male" value="Nam" asp-for="Sex" checked>
                                                <label class="form-check-label" for="gender_male">
                                                    Nam
                                                </label>
                                            </div>
                                            <div class="form-check form-check-inline">
                                                <input class="form-check-input" type="radio" name="Sex" id="gender_female" asp-for="Sex" value="Nữ">
                                                <label class="form-check-label" for="gender_female">
                                                    Nữ
                                                </label>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                                <div class="col-12 col-sm-6">
                                    <div class="form-group">
                                        <label>Email</label>
                                        <input class="form-control" type="email" asp-for="Email" placeholder="Nhập Email" required />
                                    </div>
                                </div>
                                <div class="col-12 col-sm-6">
                                    <div class="form-group">
                                        <label>Số điện thoại</label>
                                        <input class="form-control" type="text" asp-for="PhoneNumber" placeholder="Nhập số điện thoại" required />
                                    </div>
                                </div>
                                <div class="col-12 col-sm-6">
                                    <div class="form-group">
                                        <label>Địa chỉ</label>
                                        <input class="form-control" type="text" asp-for="Address" placeholder="Nhập địa chỉ" required />
                                    </div>
                                </div>
                            </div>


                            <button class="btn btn-primary mt-5 align-items-end" type="submit">Lưu</button>
                        </form>
                    </div>
                </div>

            </div>
        </div>

    </div>
</div>
@section Scripts{
   
    <script>
        $(".datetimepickerBirthDay").datetimepicker({
            format: 'DD-MM-YYYY'
        });
    </script>

}
